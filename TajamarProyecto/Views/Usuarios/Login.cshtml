<section class="h-full  flex justify-center items-center">
    <div class="container  h-full p-10">
        <div class="  h-full flex-wrap   justify-center  text-neutral-800 ">
            <div class="w-full">
                <div class="block rounded-lg bg-white shadow-sm shadow-[#00000050] dark:bg-neutral-800">
                    <div class="g-0 lg:flex lg:flex-wrap">
                        <div class="px-4 md:px-0 lg:w-6/12">
                            <div class="md:mx-6 md:p-12">
                                <div class="max-w-md relative flex flex-col p-4 rounded-md text-black bg-white">
                                    <div class="text-2xl font-bold mb-2 text-[#1e0e4b] text-center">
                                        Inicia sesión en 
                                        <span class="text-primary-200">Tech Riders</span>
                                    </div>

                                    <form class="flex flex-col gap-3" method="post">
                                        <div class="block relative">
                                            <label for="email"
                                                   class="block text-gray-600 cursor-text text-sm leading-[140%] font-normal mb-2">
                                                Email
                                            </label>
                                            <input type="text" name="email" class="rounded border border-gray-200 text-sm w-full font-normal leading-[18px] text-black tracking-[0px] appearance-none block h-11 m-0 p-[11px] focus:ring-2 ring-offset-2  ring-primary-500 outline-0" />
                                         
                                        </div>
                                        <div class="block relative">
                                            <label for="password"
                                                   class="block text-gray-600 cursor-text text-sm leading-[140%] font-normal mb-2">
                                                Password
                                            </label>
                                            <input type="text" name="password" class="rounded border border-gray-200 text-sm w-full font-normal leading-[18px] text-black tracking-[0px] appearance-none block h-11 m-0 p-[11px] focus:ring-2 ring-offset-2 ring-primary-500 outline-0" />
                                        </div>
                                       
                                        <button type="submit"
                                                onClick={this.postLogin}
                                                class="inline-flex text-white bg-primary-300 border-0 py-2 px-6 focus:outline-none hover:bg-primary-600 rounded text-lg">
                                            Iniciar sesion
                                        </button>

                                    </form>
                                    <div class="text-sm text-center mt-[1.6rem]">
                                        ¿Todavía no tienes cuenta?
                                        <a class="text-sm text-blue-300" href="/crearcuenta">
                                            Crea una
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="flex sm:p-4 p-12 items-center justify-center rounded-b-lg lg:w-6/12 lg:rounded-r-lg lg:rounded-bl-none bg-slate-800">
                            <div class="p-4  text-white md:mx-6 md:p-12 ">
                                <img src="~/images/LogoTajamar.png" alt="logo" class="w-44" />
                              
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<h1 style="color:red">@ViewData["MENSAJE"]</h1>
@if(Model != null)
{
    <h1>bienvenido @Model.Nombre</h1>
}